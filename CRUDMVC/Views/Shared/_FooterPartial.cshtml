<div class="container">
    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link px-2 text-body-secondary" aria-current="page" asp-controller="Home" asp-action="EmployerList">Список работников</a>
                </li>
            }
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Auth" asp-action="UsersList">Пользователи</a>
                </li>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link px-2 text-body-secondary" asp-controller="Auth" asp-action="Logout">Выйти</a>
                </li>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link px-2 text-body-secondary" asp-controller="Auth" asp-action="Login">Войти</a>
                </li>
            }
        </ul>
        <p class="text-center text-body-secondary">© 2023 Система учета работников</p>
    </footer>
</div>