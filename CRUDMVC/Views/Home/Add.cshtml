@model Employer

@{
    ViewData["Title"] = "Добавить";
}

<h3>Добавить сотрудника</h3>

<form method="post" asp-controller="Home" asp-action="Add" asp-antiforgery="true">
    <div class="form-group mt-3">
        <input class="form-control" asp-for="Name" placeholder="Введите имя">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group mt-3">
        <input class="form-control" asp-for="Post" placeholder="Введите должность">
        <span asp-validation-for="Post"></span>
    </div>
    <div class="form-group mt-3">
        <input class="form-control" asp-for="Salary" placeholder="Введите зарплату">
        <span asp-validation-for="Salary"></span>
    </div>
    <div class="form-group mt-3 mb-3">
        <select class="form-select" asp-items="@ViewBag.Departments" asp-for="DepartmentId"></select>
    </div>
    <input class="btn btn-success" type="submit" value="Сохранить">
</form>